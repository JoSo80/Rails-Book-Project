<div class="columns">
  <div class="column is-two-thirds">
    <p class="ml-1">
      <strong><%= link_to 'Click here to see all top rated books', books_path%></strong>
    </p>

    <h2 class="title is-2">Top 100 Books</h2>
    <ol class="ml-5">
      <% @books.each do |book|%>
        <li>
          <%= link_to book.title, book %>
          <em>(<%= book.publisher.name%>)</em>
        </li>
      <% end %>
    </ol>
  </div>

  <div class="column">
    <p class="ml-1">
      <strong><%= link_to 'Click here to see all top rated publishers', publishers_path%></strong>
    </p>
    <h2 class="title is-2">Top 100 Publishers</h2>
  <ol class="ml-5">
    <%= render @publishers %>
  </ol>
  </div>
</div>
